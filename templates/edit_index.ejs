<div id="inner">
    <button id="button" onclick="go2CheckRandom()" data-l10n-id="index.newPad"></button>
    <label id="label" for="padname" data-l10n-id="index.createOpenPad"></label>
    <form action="#" onsubmit="go2Check();return false;">
        <input type="text" id="padname" maxlength="50" autofocus x-webkit-speech>
        <button type="submit">OK</button>
    </form>
        <button id="login" class="login" onclick="go2Login()" ></button>
</div>

<script>

    username = getCookie('username');
    if(username==''){
        document.getElementById('login').setAttribute("data-l10n-id","index.login");
    } else {
        document.getElementById('login').setAttribute("data-l10n-id","go-to-home");
    }

    function go2Login() {
        window.location = "login";
    }
    function go2CheckRandom(){
        window.location = "checkpad/" + randomPadName();           
    }
    function go2Check(){        
        var padname = document.getElementById("padname").value;
        padname.length > 0 ? window.location = "checkpad/" + padname : alert("Please enter a name")
    }

    function getCookie(cname) {
        var name = cname + "=";
        var decodedCookie = decodeURIComponent(document.cookie);   
        var ca = decodedCookie.split(';');
        for(var i = 0; i <ca.length; i++) {
            var c = ca[i];
            while (c.charAt(0) == ' ') {
                c = c.substring(1);
            }
            if (c.indexOf(name) == 0) {
                return c.substring(name.length, c.length);
            }
        }
        return "";
    }
</script>

